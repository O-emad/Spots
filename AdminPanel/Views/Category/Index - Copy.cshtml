@model AdminPanel.ViewModels.CategoryIndexViewModel

<main class="main-container">
    <div class="main-content">


        <div class="card">
            <h4 class="card-title"><strong>Categories</strong></h4>

            <div class="card-body">

                <div class="flexbox mb-20">
                    <div class="lookup">
                        <input class="w-200px" type="text" name="s" placeholder="Search">
                    </div>



                    <button class="btn btn-float btn-primary" 
                            data-provide="tooltip" data-toggle="quickview"
                            data-original-title="Add New"
                            onclick="replaceContentsOfCategoryAdd()">
                        <i class="ti-plus"></i>
                    </button>


                </div>

                <table class="table table-separated">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Sort Order</th>
                            <th class="text-center w-100px">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Categories)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.SortOrder</td>
                                <td class="text-right table-actions">
                                    <a class="table-action hover-primary"
                                       onclick="replaceContentsOfDiv(this.id)"
                                       id=@item.Id>
                                        <i class="ti-pencil"></i>
                                    </a>
                                    <a class="table-action hover-danger"
                                       data-target="#modal-small" data-toggle="modal"
                                       onclick="onDelete(this.id)"
                                       id=@item.Id>
                                        <i class="ti-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <nav>
                    <ul class="pagination pagination-circle justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#">
                                <span class="ti-arrow-left"></span>
                            </a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                        <li class="page-item"><a class="page-link" href="#">5</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">
                                <span class="ti-arrow-right"></span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>

        <div class="modal fade" id="modal-small" tabindex="-1" style="display: none;" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">Delete Category</h4>
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this item</p>
                    </div>
                    <div class="modal-footer" id="sdsd">
                        <button type="button" class="btn btn-bold btn-pure btn-secondary" data-dismiss="modal">Cancel</button>
                        <button id="assertDelete" type="button" class="btn btn-bold btn-pure btn-primary"
                                onclick="assertDelete()"
                                asp-action="DeleteCategory" asp-controller="Category" asp-route-id="">
                            Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <script data-provide="sweetalert">

            function assertDelete () {
                id = $('#assertDelete').val();
                newhref = $('#assertDelete').attr('formaction') + '/' + id;
                window.location.href = newhref;
            }

            function replaceContentsOfDiv(itemid) {
        $.ajax({
            url: '@Url.Action("CategoryEditPartialView", "Category")',
            data: { id: itemid },
            type: "GET",
            success: function(data) {
                $('#placeHolderDiv').html(data);
            }
        });
            }

            function replaceContentsOfCategoryAdd() {
        $.ajax({
            url: '@Url.Action("CategoryAddPartialView", "Category")',
            type: "POST",
            success: function (data) {
                $('#categoryAddPlaceHolder').html(data);
            }

        });
            }

            function onDelete(itemid) {
                //var newhref = $("#assertDelete").attr('href') + '/' + itemid;
                $("#assertDelete").attr("value", itemid);
            }
        </script>

        <div id="placeHolderDiv">
        </div>

        <div id="categoryAddPlaceHolder">
        </div>


    </div>
</main>