@model AdEditAndCreateViewModel

<main class="main-container">
    <div class="main-content">
        <form class="card" method="post" asp-action="CreateAd" role="form" enctype="multipart/form-data">
            <h4 class="card-title"><strong>Create Ad</strong></h4>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="card-body form-type-combine">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="Name" class="require"></label>
                            <input type="text" class="form-control" asp-for="Name" required>
                            <span asp-validation-for="Name" class="text-danger invalid-feedback"></span>
                        </div>


                        <div class="form-group">
                            <label>Sort Order</label>
                            <input type="text" class="form-control" asp-for="SortOrder">
                        </div>


                        <div class="form-group">
                            <label>ExternalLink</label>
                            <input type="text" class="form-control" asp-for="ExternalLink">
                        </div>

                        <div class="form-group">
                            <label class="require">Ad Image</label>
                            <div class="input-group file-group">
                                <div class="input-group-input do-float">
                                    <input type="text" class="form-control file-value" readonly="">
                                    <input asp-for="Files" type="file" class="form-control" multiple="" accept=".jpg,.jpeg" required>
                                    <label>Choose file...</label>
                                </div>
                                <span class="input-group-append">
                                    <button class="btn btn-light file-browser" type="button"><i class="fa fa-upload"></i></button>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="VendorId" class="require"></label>
                            <select asp-for="VendorId" asp-items=@Model.Vendors required
                                    data-provide="selectpicker" data-live-search="true"
                                    class="chzn-select form-control multiselect">
                                <option value="@null">None</option>
                            </select>
                            <span asp-validation-for="VendorId" class="text-danger invalid-feedback"></span>
                        </div>
                    </div>
                </div>
            </div>


            <footer class="card-footer text-right">
                <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                <button class="btn btn-primary" type="submit">Submit</button>
            </footer>
        </form>
    </div>

</main>

