@model AdminPanel.ViewModels.ChangePasswordViewModel

@if (TempData.ContainsKey("CUD"))
{
    if ((bool)TempData["CUD"] == true)
    {
        <div class="alert @TempData["Type"] alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            @TempData["Message"]
        </div>
    }
}

<main class="main-container">
    <div class="main-content">
        <form class="card" method="post" asp-action="ChangePassword" role="form" enctype="multipart/form-data">
            <h4 class="card-title"><strong>Change Password</strong></h4>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="card-body form-type-combine">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="OldPassword" class="require"></label>
                            <input type="password" class="form-control" asp-for="OldPassword" required>
                            <span asp-validation-for="OldPassword" class="text-danger invalid-feedback"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="NewPassword" class="require"></label>
                            <input type="password" class="form-control" asp-for="NewPassword" id="input_pass" required>
                            <span asp-validation-for="NewPassword" class="text-danger invalid-feedback"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmNewPassword" class="require"></label>
                            <input type="password" class="form-control" asp-for="ConfirmNewPassword" data-match="#input_pass" required>
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger invalid-feedback"></span>
                        </div>
                    </div>
                </div>
            </div>


            <footer class="card-footer text-right">
                <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                <button class="btn btn-primary" type="submit">Submit</button>
            </footer>
        </form>
    </div>

</main>
