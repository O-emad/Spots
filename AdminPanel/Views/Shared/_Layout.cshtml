<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Responsive admin dashboard">
    <meta name="keywords" content="blank, starter">
    
    <title>Spots</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,300i" rel="stylesheet">

    <!-- Styles -->
    <link href="~/css/core.min.css" rel="stylesheet">
    <link href="~/css/app.min.css" rel="stylesheet">
    <link href="~/css/style.min.css" rel="stylesheet">

    <!-- Favicons -->
    <link rel="shortcut icon" href="~/img/favicon.ico">
    <link rel="icon" href="~/img/icon.png">
</head>

<body>

    <!-- Preloader -->
    <div class="preloader">
        <div class="spinner-dots">
            <span class="dot1"></span>
            <span class="dot2"></span>
            <span class="dot3"></span>
        </div>
    </div>


    <!-- Sidebar -->
    <aside class="sidebar sidebar-icons-right sidebar-icons-boxed sidebar-expand-lg sidebar-color-yellow
           sidebar-dark">
        <header class="sidebar-header" style="background-color: #fff">
            <a class="logo-icon" asp-controller="Home" asp-action="Index"><img src="~/img/spots-logo.png" alt="logo icon"></a>
            <span class="logo">
                <a asp-controller="Home" asp-action="Index"><img src="~/img/logo.png" alt="logo"></a>
            </span>
            <span class="sidebar-toggle-fold "></span>
        </header>

        <nav class="sidebar-navigation">
            <ul class="menu">



                <li class="menu-item @ViewData["home"]">
                    <a class="menu-link" asp-controller="Home" asp-action="Index">
                        <span class="icon fa fa-home"></span>
                        <span class="title">Dashboard</span>
                    </a>
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="menu-item @ViewData["category"]">
                        <a class="menu-link" asp-controller="Category" asp-action="Index">
                            <span class="icon ti-receipt"></span>
                            <span class="title">Category</span>
                        </a>
                    </li>
                }
                <li class="menu-item @ViewData["vendor"]">
                    <a class="menu-link" asp-controller="Vendor" asp-action="Index">
                        <span class="icon fa fa-user"></span>
                        <span class="title">Vendor</span>
                    </a>
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="menu-item @ViewData["ad"]">
                        <a class="menu-link" asp-controller="Ad" asp-action="Index">
                            <span class="icon fa fa-tv"></span>
                            <span class="title">Ads</span>
                        </a>
                    </li>
                }
                @if (User.IsInRole("Admin"))
                {
                    <li class="menu-item  @ViewData["setting"]">
                        <a class="menu-link" asp-controller="Setting" asp-action="Index">
                            <span class="icon ti-settings"></span>
                            <span class="title">Setting</span>
                        </a>
                    </li>
                }

            </ul>
        </nav>

    </aside>
    <!-- END Sidebar -->
    <!-- Topbar -->
    <header class="topbar">
        <div class="topbar-left">
            <span class="topbar-btn sidebar-toggler"><i>&#9776;</i></span>
        </div>
        <div class="topbar-right">
            @if (User.Identity.IsAuthenticated)
            {
                <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
            }
        </div>
    </header>
    <!-- END Topbar -->
    <!-- Main container -->

    <!--/.main-content -->
    <main>
        @RenderBody()
        <!-- Footer -->

        <!-- END Footer -->

    </main>
    <!-- END Main container -->
    <!-- Global quickview -->
    <div id="qv-global" class="quickview" data-url="~/data/quickview-global.html">
        <div class="spinner-linear">
            <div class="line"></div>
        </div>
    </div>
    <!-- END Global quickview -->
    <!-- Scripts -->
    <script src="~/js/core.min.js"></script>
    <script src="~/js/app.min.js"></script>
    <script src="~/js/script.min.js"></script>

</body>
</html>
