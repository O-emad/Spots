@model AdminPanel.ViewModels.LinkVendorViewModel

<main class="main-container">
    <div class="main-content">

        <form asp-action="LinkVendor" asp-route-id =@Model.Id method="post" class="card">
            <h4 class="card-title"><strong>Link Vendor To User</strong></h4>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="card-body form-type-combine">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label>Selected User</label>
                            <select asp-for="SelectedUserSubject" asp-items=@Model.Users required
                                    data-provide="selectpicker" data-live-search="true"
                                    class="chzn-select form-control multiselect">
                            </select>
                            <div class="text-danger invalid-feedback"></div>
                        </div>
                    </div>

                </div>
            </div>
            <footer class="card-footer text-right">
                <button type="submit" class="btn btn-primary">Link</button>
                <a class="btn btn-secondary" asp-action="Index">Return</a>
            </footer>
        </form>
    </div>
</main>